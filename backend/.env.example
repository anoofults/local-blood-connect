# Database Configuration
DATABASE_URL=postgresql://bloodlink_user:bloodlink_password@localhost:5432/bloodlink_local

# Authentication Secrets
# IMPORTANT: Generate strong secrets for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-too

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:8080

# JWT Configuration
JWT_EXPIRES_IN=7d

# Session Configuration (if using express-session)
SESSION_MAX_AGE=604800000

# bcrypt rounds (10-12 recommended)
BCRYPT_ROUNDS=10

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100
